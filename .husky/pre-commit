#!/bin/sh
set -e

echo "ğŸ” Running pre-commit quality checks..."

# Check for any type usage
echo "âš ï¸  Checking for 'any' type usage..."
if grep -rE ":\s*any\b|<any>|\bany\[]|any\s*\||\|\s*any\b" src/ --include="*.ts" --exclude="*.test.ts" --exclude="*.spec.ts"; then
  echo "âŒ 'any' type found in source code - commit blocked"
  echo "ğŸ’¡ Use proper TypeScript types instead of 'any'"
  exit 1
fi

# Run ESLint
echo "ğŸ” Running ESLint..."
npm run lint

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type check..."
npm run type-check

# Run tests
echo "ğŸ§ª Running tests..."
npm run test

echo "âœ… All quality checks passed!"
