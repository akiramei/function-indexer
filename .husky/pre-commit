#!/bin/sh
set -e

echo "🔍 Running pre-commit quality checks..."

# Check for any type usage
echo "⚠️  Checking for 'any' type usage..."
if grep -rE ":\s*any\b|<any>|\bany\[]|any\s*\||\|\s*any\b" src/ --include="*.ts" --exclude="*.test.ts" --exclude="*.spec.ts"; then
  echo "❌ 'any' type found in source code - commit blocked"
  echo "💡 Use proper TypeScript types instead of 'any'"
  exit 1
fi

# Run ESLint
echo "🔍 Running ESLint..."
npm run lint

# Run TypeScript type checking
echo "🔍 Running TypeScript type check..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ All quality checks passed!"
